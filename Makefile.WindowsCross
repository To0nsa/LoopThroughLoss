# **************************************************************************** #
#                         WINDOWS CROSS MAKEFILE ðŸªŸ                            #
# **************************************************************************** #

# Compiler and flags
CC       := x86_64-w64-mingw32-gcc
AR       := x86_64-w64-mingw32-ar
CFLAGS   := -Wall -Wextra -Werror -Iinclude -Ilibft/include -Iraylib/src
LDFLAGS  := -Llibft/lib -lft -Lraylib/src -lraylib -lopengl32 -lgdi32 -lwinmm

# Executable
NAME     := LoopThroughLoss.exe

# Sources and objects
SRCS     := $(shell find srcs -name "*.c")
OBJS     := $(SRCS:.c=.o)

# Colors
GREEN    := \033[0;32m
CYAN     := \033[0;36m
YELLOW   := \033[1;33m
RESET    := \033[0m

# Default goal
.DEFAULT_GOAL := all

# **************************************************************************** #
#                                ðŸ”§ BUILD TARGETS                              #
# **************************************************************************** #

all: libft raylib $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $@ $(LDFLAGS)
	@echo "$(CYAN)ðŸŽ® Built Windows executable:$(RESET) $(NAME)"

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)ðŸ› ï¸  Compiled:$(RESET) $<"

libft:
	@make -C libft CC=$(CC) AR=$(AR)

raylib:
	@cd raylib/src && \
	make CC=$(CC) AR=$(AR) \
		PLATFORM=PLATFORM_DESKTOP \
		RAYLIB_LIBTYPE=STATIC \
		OS=Windows_NT

clean:
	@rm -f $(OBJS)
	@make -C libft clean
	@make -C raylib/src clean
	@echo "$(YELLOW)ðŸ§¹ Cleaned object files.$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@make -C libft fclean
	@echo "$(YELLOW)ðŸ—‘ï¸  Removed executable:$(RESET) $(NAME)"

re: fclean all

# **************************************************************************** #
#                                ðŸ’¡ USAGE GUIDE                               #
# **************************************************************************** #
# make -f Makefile.WindowsCross        â†’ Build the Windows executable ðŸªŸ
# make -f Makefile.WindowsCross clean  â†’ Clean all object files ðŸ§¹
# make -f Makefile.WindowsCross fclean â†’ Clean everything including binary ðŸ—‘ï¸
# make -f Makefile.WindowsCross re     â†’ Full rebuild ðŸ”
# **************************************************************************** #

.PHONY: all clean fclean re libft raylib
